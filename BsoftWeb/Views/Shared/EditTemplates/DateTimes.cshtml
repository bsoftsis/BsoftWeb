@model DateTime?

@if (!Model.HasValue)
{
    <input type="date"
           value=""
           id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")"/>
}
else
{
     <input type="date"
           value="@Model.Value.ToString("dd/MM/yyyy")"
           id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")"/>
}