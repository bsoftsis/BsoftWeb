<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BsoftSIS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">

            <div class="navbar-header">
                <a href="/Home/">
                    <img class="img-responsive" width=50 height=50 src="~/Content/Images/Logo.jpg" alt="Logo Bsoft" />
                </a> 
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar">
                        </span>
                    </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("La empresa", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                    @*Si el usuario esta logueado se vera esta parte del menu
                    segun el prefil del usuario que usa el sistema*@
                    <li>@Html.ActionLink("Proveedores","index", "Proveedor")</li>
                    <li>@Html.ActionLink("Compras", "index", "Compra")</li>
                    <li>@Html.ActionLink("Servicios", "index", "Servicio")</li>
                    <li>@Html.ActionLink("Tecnicos", "index", "TecnicoProveedor")</li>
                    <li>@Html.ActionLink("Equipamientos", "index", "Equipamiento")</li>
                    <li>@Html.ActionLink("Usuarios", "index", "Usuario")</li>
                    <li>@Html.ActionLink("PerfilUsuarios", "index", "PerfilUsuario")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="well">
            @RenderBody()
        </div>
        <hr />
        <footer class="panel-footer">
            <p class="text-success">&copy; @DateTime.Now.Year - Bisoft SAS - @Html.Partial("_RedesPartial") </p>
         
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
