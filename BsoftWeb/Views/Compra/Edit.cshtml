                @Html.EditorFor(model => model.fechaCompra, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.fechaCompra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nroComprobante, htmlAttributes: new { @class = "control-label col-md-2" })
